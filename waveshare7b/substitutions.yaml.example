# substitutions.yaml.example
# ═══════════════════════════════════════════════════════════════════════════════
# RENTAL DISPLAY - Entity Configuration
# ═══════════════════════════════════════════════════════════════════════════════
# Copy this file to substitutions.yaml and fill in YOUR Home Assistant entity IDs.
# Each property gets its own substitutions.yaml — this is the ONLY file you
# need to change when deploying to a new property.
#
# Hardware pins are hardcoded in device.yaml (7B uses most GPIO for RGB bus).
#
# HOW TO DEPLOY TO A NEW PROPERTY:
#   1. Copy this file to substitutions.yaml
#   2. Update property_name
#   3. Replace every entity ID with the correct one from your HA instance
#   4. Flash the device
# ═══════════════════════════════════════════════════════════════════════════════

substitutions:
  # ── Property ──────────────────────────────────────────────────────────────────
  # Display name shown in the header bar
  property_name: "EmeraldTide"

  # ── Alarm Panel ───────────────────────────────────────────────────────────────
  # Used for: arm/disarm controls, alarm status display, countdown timer
  alarm_panel: "alarm_control_panel.alarmo"

  # ── Locks ─────────────────────────────────────────────────────────────────────
  # Used for: main status cards, locks & doors page, security status checks
  front_door_lock: "lock.front_door_deadbolt"
  back_door_lock: "lock.patio_doordeadbolt"

  # ── Contact / Binary Sensors ──────────────────────────────────────────────────
  # Door contact sensors — used for open/closed status + security warnings
  front_door_sensor: "binary_sensor.front_door"
  back_door_sensor: "binary_sensor.back_door"
  # Garage door sensors — binary open/closed
  south_garage_sensor: "binary_sensor.konnected_aa00c0_zone_5"
  north_garage_sensor: "binary_sensor.konnected_aa00c0_zone_1"
  # NOTE: Map your Konnected zones to the correct physical doors:
  #   zone_1 = ?          zone_2 = ?          zone_3 = ?
  #   zone_4 = ?          zone_5 = ?

  # ── Garage / Covers ───────────────────────────────────────────────────────────
  # Cover entities — used for tap-to-toggle on status page + locks page
  south_garage_door: "cover.garage_door"
  north_garage_door: "cover.north_garage_door"   # TODO: set your north garage cover entity

  # ── Lights (display controls 3 lights) ────────────────────────────────────────
  # These appear on the lighting control page + "All Lights Off" quick action
  living_room_light: "light.in_wall_paddle_dimmer_qfsw_500s"   # Kitchen / main room
  kitchen_light: "light.in_wall_paddle_dimmer_500s"             # Patio dining / secondary
  outdoor_light: "switch.scene_capable_push_on_off"             # Front coach / outdoor

  # ── Climate / Temperature ─────────────────────────────────────────────────────
  # Shown as the first two status cards on the main page
  outside_temp: "sensor.outside_temperature"
  inside_temp: "sensor.inside_temperature"

  # ── Weather ───────────────────────────────────────────────────────────────────
  # HA weather entity used by template sensors for 5-day forecast
  # Requires 20 template sensors in HA — see README for setup
  weather_entity: "weather.ktki_daynight"

  # ═══════════════════════════════════════════════════════════════════════════════
